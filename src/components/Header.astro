---
const navLinks = [
  { href: '/', label: 'Accueil', number: '01' },
  { href: '/services', label: 'Services', number: '02' },
  { href: '/realisations', label: 'Réalisations', number: '03' },
  { href: '/a-propos', label: 'À propos', number: '04' },
  { href: '/contact', label: 'Contact', number: '05' },
];
---

<header class="header" id="header">
  <div class="header__container">
    <!-- Logo -->
    <a href="/" class="header__logo">
      <img src="/logo-long.svg" alt="Aquacare Service" class="header__logo-img" />
    </a>

    <!-- Right side -->
    <div class="header__right">
      <!-- CTA -->
      <a href="/contact" class="header__cta btn btn--primary hide-mobile">
        <span>Devis gratuit</span>
      </a>

      <!-- Menu toggle -->
      <button class="header__toggle" data-menu-toggle aria-label="Menu">
        <span class="header__toggle-line"></span>
        <span class="header__toggle-line"></span>
      </button>
    </div>
  </div>
</header>

<!-- Full-screen menu -->
<nav class="menu" id="menu" aria-hidden="true">
  <div class="menu__bg">
    <div class="menu__bg-panel menu__bg-panel--1"></div>
    <div class="menu__bg-panel menu__bg-panel--2"></div>
  </div>

  <div class="menu__container">
    <div class="menu__content">
      <!-- Nav links -->
      <ul class="menu__nav">
        {navLinks.map((link, index) => (
          <li class="menu__nav-item" style={`--delay: ${index * 0.1}s`}>
            <a href={link.href} class="menu__nav-link">
              <span class="menu__nav-number">{link.number}</span>
              <span class="menu__nav-text" data-text={link.label}>{link.label}</span>
            </a>
          </li>
        ))}
      </ul>

      <!-- Side info -->
      <div class="menu__info">
        <div class="menu__info-block">
          <span class="menu__info-label">Contact</span>
          <a href="tel:+33XXXXXXXXX" class="menu__info-link">+33 X XX XX XX XX</a>
          <a href="mailto:contact@aquacareservice.fr" class="menu__info-link">contact@aquacareservice.fr</a>
        </div>

        <div class="menu__info-block">
          <span class="menu__info-label">Zone d'intervention</span>
          <p class="menu__info-text">Var (83), France</p>
        </div>

        <div class="menu__socials">
          <a href="#" class="menu__social-link" aria-label="Instagram">IG</a>
          <a href="#" class="menu__social-link" aria-label="Facebook">FB</a>
          <a href="#" class="menu__social-link" aria-label="LinkedIn">LI</a>
        </div>
      </div>
    </div>
  </div>
</nav>

<style>
  /* ═══════════════════════════════════════════
     HEADER - Light Theme
     ═══════════════════════════════════════════ */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-header);
    padding: var(--space-6) 0;
    transition: background 0.4s ease, box-shadow 0.4s ease;
  }

  .header.is-scrolled {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.05);
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container-max);
    margin-inline: auto;
    padding-inline: var(--container-padding);
  }

  /* Logo */
  .header__logo {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--color-dark);
    z-index: calc(var(--z-menu) + 1);
    transition: color 0.3s ease;
  }

  .header__logo-img {
    height: 44px;
    width: auto;
  }

  /* When menu is open, logo becomes white */
  body.menu-open .header__logo-img {
    filter: brightness(0) invert(1);
  }

  /* Right */
  .header__right {
    display: flex;
    align-items: center;
    gap: var(--space-6);
  }

  .header__cta {
    z-index: calc(var(--z-menu) + 1);
  }

  /* Toggle */
  .header__toggle {
    position: relative;
    width: 48px;
    height: 48px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 8px;
    z-index: calc(var(--z-menu) + 1);
    cursor: pointer;
  }

  .header__toggle-line {
    display: block;
    width: 32px;
    height: 2px;
    background: var(--color-dark);
    transition: transform 0.4s var(--ease-out-expo),
                opacity 0.3s ease,
                background 0.3s ease;
  }

  body.menu-open .header__toggle-line {
    background: var(--color-white);
  }

  .header__toggle.is-active .header__toggle-line:first-child {
    transform: translateY(5px) rotate(45deg);
  }

  .header__toggle.is-active .header__toggle-line:last-child {
    transform: translateY(-5px) rotate(-45deg);
  }

  /* ═══════════════════════════════════════════
     FULL-SCREEN MENU - Keep the cool layout!
     ═══════════════════════════════════════════ */
  .menu {
    position: fixed;
    inset: 0;
    z-index: var(--z-menu);
    pointer-events: none;
    overflow: hidden;
  }

  .menu.is-open {
    pointer-events: auto;
  }

  /* Animated background panels - turquoise gradient */
  .menu__bg {
    position: absolute;
    inset: 0;
  }

  .menu__bg-panel {
    position: absolute;
    inset: 0;
    transform: translateY(-100%);
    transition: transform 0.8s var(--ease-out-expo);
  }

  .menu__bg-panel--1 {
    background: var(--color-primary);
    transition-delay: 0s;
  }

  .menu__bg-panel--2 {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-dark-soft) 100%);
    transition-delay: 0.1s;
  }

  .menu.is-open .menu__bg-panel {
    transform: translateY(0);
  }

  .menu.is-open .menu__bg-panel--1 {
    transition-delay: 0s;
  }

  .menu.is-open .menu__bg-panel--2 {
    transition-delay: 0.1s;
  }

  /* Container */
  .menu__container {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    max-width: var(--container-max);
    margin-inline: auto;
    padding-inline: var(--container-padding);
  }

  .menu__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-16);
    width: 100%;
    padding-block: var(--space-32);
  }

  @media (min-width: 1024px) {
    .menu__content {
      grid-template-columns: 2fr 1fr;
      align-items: center;
    }
  }

  /* Nav links */
  .menu__nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .menu__nav-item {
    overflow: hidden;
  }

  .menu__nav-link {
    display: flex;
    align-items: baseline;
    gap: var(--space-4);
    padding: var(--space-3) 0;
    opacity: 0;
    transform: translateY(100%);
    transition: opacity 0.5s ease,
                transform 0.8s var(--ease-out-expo);
    transition-delay: var(--delay);
  }

  .menu.is-open .menu__nav-link {
    opacity: 1;
    transform: translateY(0);
  }

  .menu__nav-number {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.5);
    font-weight: var(--font-medium);
  }

  .menu__nav-text {
    position: relative;
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 8vw, 6rem);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    color: var(--color-white);
    transition: color 0.3s ease;
  }

  .menu__nav-text::after {
    content: attr(data-text);
    position: absolute;
    left: 0;
    top: 0;
    color: var(--color-primary-lighter);
    clip-path: polygon(0 50%, 100% 50%, 100% 50%, 0 50%);
    transition: clip-path 0.4s var(--ease-out-expo);
  }

  .menu__nav-link:hover .menu__nav-text::after {
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
  }

  /* Info */
  .menu__info {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease 0.4s,
                transform 0.8s var(--ease-out-expo) 0.4s;
  }

  .menu.is-open .menu__info {
    opacity: 1;
    transform: translateY(0);
  }

  .menu__info-block {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .menu__info-label {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.5);
  }

  .menu__info-link,
  .menu__info-text {
    font-size: var(--text-base);
    color: var(--color-white);
    transition: color 0.3s ease;
  }

  .menu__info-link:hover {
    color: var(--color-primary-lighter);
  }

  .menu__socials {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-8);
  }

  .menu__social-link {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: color 0.3s ease;
  }

  .menu__social-link:hover {
    color: var(--color-white);
  }
</style>

<script>
  // Header scroll effect only - menu toggle is handled in BaseLayout
  const header = document.getElementById('header');

  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;

    if (currentScroll > 100) {
      header?.classList.add('is-scrolled');
    } else {
      header?.classList.remove('is-scrolled');
    }
  });
</script>
