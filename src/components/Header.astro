---
const navLinks = [
  { href: '/', label: 'Accueil', number: '01' },
  { href: '/realisations', label: 'Réalisations', number: '03' },
  { href: '/#about', label: 'À propos', number: '04' },
  { href: '/contact', label: 'Contact', number: '05' },
];

const serviceLinks = [
  { href: '/entretien', label: 'Entretien' },
  { href: '/renovation', label: 'Rénovation & équipements' },
];
---

<header class="header" id="header">
  <div class="header__container">
    <!-- Logo -->
    <a href="/" class="header__logo">
      <img src="/logo-long.svg" alt="Aquacare Service" class="header__logo-img" />
    </a>

    <!-- Right side -->
    <div class="header__right">
      <!-- CTA -->
      <a href="/contact" class="header__cta btn btn--primary hide-mobile">
        <span>Devis gratuit</span>
      </a>

      <!-- Menu toggle -->
      <button class="header__toggle" data-menu-toggle aria-label="Menu">
        <span class="header__toggle-line"></span>
        <span class="header__toggle-line"></span>
      </button>
    </div>
  </div>
</header>

<!-- Full-screen menu -->
<nav class="menu" id="menu" aria-hidden="true">
  <div class="menu__bg">
    <div class="menu__bg-panel menu__bg-panel--1"></div>
    <div class="menu__bg-panel menu__bg-panel--2"></div>
  </div>

  <div class="menu__container">
    <div class="menu__content">
      <!-- Nav links -->
      <ul class="menu__nav">
        <!-- Accueil -->
        <li class="menu__nav-item" style="--delay: 0s">
          <a href="/" class="menu__nav-link">
            <span class="menu__nav-number">01</span>
            <span class="menu__nav-text" data-text="Accueil">Accueil</span>
          </a>
        </li>

        <!-- Services avec sous-menu -->
        <li class="menu__nav-item menu__nav-item--has-sub" style="--delay: 0.1s">
          <button class="menu__nav-link menu__nav-toggle" data-services-toggle type="button">
            <span class="menu__nav-number">02</span>
            <span class="menu__nav-text" data-text="Services">Services</span>
            <svg class="menu__nav-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" width="24" height="24">
              <path d="M9 18l6-6-6-6" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <div class="menu__sub">
            <div class="menu__sub-inner">
              {serviceLinks.map((link) => (
                <a href={link.href} class="menu__sub-link">{link.label}</a>
              ))}
            </div>
          </div>
        </li>

        <!-- Rest of nav -->
        {navLinks.slice(1).map((link, index) => (
          <li class="menu__nav-item" style={`--delay: ${(index + 2) * 0.1}s`}>
            <a href={link.href} class="menu__nav-link">
              <span class="menu__nav-number">{link.number}</span>
              <span class="menu__nav-text" data-text={link.label}>{link.label}</span>
            </a>
          </li>
        ))}
      </ul>

      <!-- Side info -->
      <div class="menu__info">
        <div class="menu__info-block">
          <span class="menu__info-label">Contact</span>
          <a href="tel:+33XXXXXXXXX" class="menu__info-link">+33 X XX XX XX XX</a>
          <a href="mailto:contact@aquacareservice.fr" class="menu__info-link">contact@aquacareservice.fr</a>
        </div>

        <div class="menu__info-block">
          <span class="menu__info-label">Zone d'intervention</span>
          <p class="menu__info-text">Var (83), France</p>
        </div>

        <div class="menu__socials">
          <a href="#" class="menu__social-link" aria-label="Instagram">IG</a>
          <a href="#" class="menu__social-link" aria-label="Facebook">FB</a>
          <a href="#" class="menu__social-link" aria-label="LinkedIn">LI</a>
        </div>
      </div>
    </div>
  </div>
</nav>

<style>
  /* ═══════════════════════════════════════════
     HEADER - Light Theme
     ═══════════════════════════════════════════ */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-header);
    padding: var(--space-3) 0;
    transition: background 0.4s ease, box-shadow 0.4s ease;
  }

  @media (min-width: 768px) {
    .header {
      padding: var(--space-6) 0;
    }
  }

  .header.is-scrolled {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.05);
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container-max);
    margin-inline: auto;
    padding-inline: var(--container-padding);
  }

  /* Logo */
  .header__logo {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--color-dark);
    z-index: calc(var(--z-menu) + 1);
    transition: color 0.3s ease;
  }

  .header__logo-img {
    height: 32px;
    width: auto;
  }

  @media (min-width: 768px) {
    .header__logo-img {
      height: 44px;
    }
  }

  /* When menu is open, logo becomes white */
  body.menu-open .header__logo-img {
    filter: brightness(0) invert(1);
  }

  /* When page has dark hero AND header is not scrolled */
  body.has-dark-hero .header:not(.is-scrolled) .header__logo-img {
    filter: brightness(0) invert(1);
  }

  /* Right */
  .header__right {
    display: flex;
    align-items: center;
    gap: var(--space-6);
  }

  .header__cta {
    z-index: calc(var(--z-menu) + 1);
  }

  /* Toggle */
  .header__toggle {
    position: relative;
    width: 48px;
    height: 48px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 8px;
    z-index: calc(var(--z-menu) + 1);
    cursor: pointer;
  }

  .header__toggle-line {
    display: block;
    width: 32px;
    height: 2px;
    background: var(--color-dark);
    transition: transform 0.4s var(--ease-out-expo),
                opacity 0.3s ease,
                background 0.3s ease;
  }

  body.menu-open .header__toggle-line {
    background: var(--color-white);
  }

  /* When page has dark hero AND header is not scrolled */
  body.has-dark-hero .header:not(.is-scrolled) .header__toggle-line {
    background: var(--color-white);
  }

  .header__toggle.is-active .header__toggle-line:first-child {
    transform: translateY(5px) rotate(45deg);
  }

  .header__toggle.is-active .header__toggle-line:last-child {
    transform: translateY(-5px) rotate(-45deg);
  }

  /* ═══════════════════════════════════════════
     FULL-SCREEN MENU
     ═══════════════════════════════════════════ */
  .menu {
    position: fixed;
    inset: 0;
    z-index: var(--z-menu);
    pointer-events: none;
    overflow: hidden;
  }

  .menu.is-open {
    pointer-events: auto;
  }

  /* Animated background panels — bleu marine charte */
  .menu__bg {
    position: absolute;
    inset: 0;
  }

  .menu__bg-panel {
    position: absolute;
    inset: 0;
    transform: translateY(-100%);
    transition: transform 0.8s var(--ease-out-expo);
  }

  .menu__bg-panel--1 {
    background: var(--color-dark);
    transition-delay: 0s;
  }

  .menu__bg-panel--2 {
    background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-dark-deep) 100%);
    transition-delay: 0.1s;
  }

  .menu.is-open .menu__bg-panel {
    transform: translateY(0);
  }

  .menu.is-open .menu__bg-panel--1 {
    transition-delay: 0s;
  }

  .menu.is-open .menu__bg-panel--2 {
    transition-delay: 0.1s;
  }

  /* Container */
  .menu__container {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    max-width: var(--container-max);
    margin-inline: auto;
    padding-inline: var(--container-padding);
  }

  .menu__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
    width: 100%;
    padding-block: var(--space-20);
    overflow-y: auto;
    max-height: 100vh;
  }

  @media (min-width: 768px) {
    .menu__content {
      gap: var(--space-16);
      padding-block: var(--space-32);
      overflow-y: visible;
      max-height: none;
    }
  }

  @media (min-width: 1024px) {
    .menu__content {
      grid-template-columns: 2fr 1fr;
      align-items: center;
    }
  }

  /* Nav links */
  .menu__nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .menu__nav-item {
    overflow: hidden;
  }

  .menu__nav-item--has-sub {
    overflow: visible;
  }

  .menu__nav-link {
    display: flex;
    align-items: baseline;
    gap: var(--space-4);
    padding: var(--space-3) 0;
    opacity: 0;
    transform: translateY(100%);
    transition: opacity 0.5s ease,
                transform 0.8s var(--ease-out-expo);
    transition-delay: var(--delay);
  }

  .menu.is-open .menu__nav-link {
    opacity: 1;
    transform: translateY(0);
  }

  .menu__nav-number {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.5);
    font-weight: var(--font-medium);
  }

  .menu__nav-text {
    position: relative;
    font-family: var(--font-display);
    font-size: clamp(1.8rem, 8vw, 6rem);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    color: var(--color-white);
    transition: color 0.3s ease;
  }

  .menu__nav-text::after {
    content: attr(data-text);
    position: absolute;
    left: 0;
    top: 0;
    color: var(--color-logo-teal);
    clip-path: polygon(0 50%, 100% 50%, 100% 50%, 0 50%);
    transition: clip-path 0.4s var(--ease-out-expo);
  }

  .menu__nav-link:hover .menu__nav-text::after {
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
  }

  /* ═══════════════════════════════════════════
     SERVICES SUB-MENU
     ═══════════════════════════════════════════ */
  .menu__nav-toggle {
    cursor: pointer;
    background: none;
    border: none;
    font: inherit;
    color: inherit;
    width: 100%;
    text-align: left;
  }

  .menu__nav-arrow {
    width: clamp(1.2rem, 4vw, 2.5rem);
    height: clamp(1.2rem, 4vw, 2.5rem);
    color: rgba(255, 255, 255, 0.4);
    flex-shrink: 0;
    align-self: center;
    transition: transform 0.4s var(--ease-out-expo), color 0.3s ease;
  }

  .menu__nav-item--has-sub.is-open .menu__nav-arrow {
    transform: rotate(90deg);
    color: var(--color-logo-teal);
  }

  .menu__sub {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s var(--ease-out-expo);
  }

  .menu__nav-item--has-sub.is-open .menu__sub {
    max-height: 200px;
  }

  .menu__sub-inner {
    display: flex;
    flex-direction: column;
    padding: var(--space-2) 0 var(--space-4) 0;
  }

  .menu__sub-link {
    display: block;
    padding: var(--space-2) 0 var(--space-2) calc(var(--space-4) + 1.2em);
    font-family: var(--font-display);
    font-size: clamp(1rem, 4vw, 1.75rem);
    font-weight: var(--font-semibold);
    color: rgba(255, 255, 255, 0.6);
    transition: color 0.3s ease, padding-left 0.3s var(--ease-out-expo);
  }

  .menu__sub-link:hover {
    color: var(--color-white);
    padding-left: calc(var(--space-6) + 1.2em);
  }

  /* Info */
  .menu__info {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease 0.4s,
                transform 0.8s var(--ease-out-expo) 0.4s;
  }

  .menu.is-open .menu__info {
    opacity: 1;
    transform: translateY(0);
  }

  .menu__info-block {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .menu__info-label {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.5);
  }

  .menu__info-link,
  .menu__info-text {
    font-size: var(--text-base);
    color: var(--color-white);
    transition: color 0.3s ease;
  }

  .menu__info-link:hover {
    color: var(--color-logo-teal);
  }

  .menu__socials {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-8);
  }

  .menu__social-link {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: color 0.3s ease;
  }

  .menu__social-link:hover {
    color: var(--color-white);
  }
</style>

<script>
  // Header scroll effect
  const header = document.getElementById('header');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 100) {
      header?.classList.add('is-scrolled');
    } else {
      header?.classList.remove('is-scrolled');
    }
  });

  // Services sub-menu toggle
  const servicesToggle = document.querySelector('[data-services-toggle]');
  const servicesItem = servicesToggle?.closest('.menu__nav-item--has-sub');

  servicesToggle?.addEventListener('click', () => {
    servicesItem?.classList.toggle('is-open');
  });
</script>
