---
import waterTexture from '../../assets/images/fond.webp';
import doneIcon from '../../assets/icons/done.svg';
---

<section class="hero" id="hero">
  <!-- Background gradient (canvas disabled for performance) -->
  <div class="hero__bg" aria-hidden="true"></div>

  <!-- Water texture overlay -->
  <div class="hero__water-texture" aria-hidden="true">
    <img src={waterTexture.src} alt="" />
  </div>

  <!-- SVG Filter for underwater distortion -->
  <svg class="hero__filters" aria-hidden="true">
    <defs>
      <filter id="underwater-distortion" x="-20%" y="-20%" width="140%" height="140%">
        <!-- Base turbulence layer - smooth waves -->
        <feTurbulence
          type="turbulence"
          baseFrequency="0.008 0.012"
          numOctaves="3"
          seed="5"
          result="turbulence1"
        >
          <animate
            attributeName="baseFrequency"
            dur="12s"
            values="0.008 0.012; 0.012 0.008; 0.01 0.01; 0.008 0.012"
            repeatCount="indefinite"
            calcMode="spline"
            keySplines="0.4 0 0.6 1; 0.4 0 0.6 1; 0.4 0 0.6 1"
          />
        </feTurbulence>

        <!-- Secondary layer for more organic feel -->
        <feTurbulence
          type="fractalNoise"
          baseFrequency="0.02 0.015"
          numOctaves="2"
          seed="10"
          result="turbulence2"
        >
          <animate
            attributeName="baseFrequency"
            dur="8s"
            values="0.02 0.015; 0.015 0.02; 0.02 0.015"
            repeatCount="indefinite"
          />
        </feTurbulence>

        <!-- Blend the two turbulences -->
        <feBlend in="turbulence1" in2="turbulence2" mode="overlay" result="blendedTurbulence"/>

        <!-- Apply displacement with more intensity -->
        <feDisplacementMap
          in="SourceGraphic"
          in2="blendedTurbulence"
          scale="18"
          xChannelSelector="R"
          yChannelSelector="G"
        />
      </filter>

    </defs>
  </svg>
  <!-- Water surface at top - multiple layers -->
  <div class="hero__surface-top">
    <svg viewBox="0 0 1440 200" preserveAspectRatio="none">
      <!-- Back wave - subtle -->
      <path class="hero__surface-wave hero__surface-wave--3" d="M0,120 C240,160 480,80 720,120 C960,160 1200,80 1440,120 L1440,0 L0,0 Z"/>
      <!-- Mid wave -->
      <path class="hero__surface-wave hero__surface-wave--2" d="M0,90 C360,140 720,40 1080,90 C1260,120 1380,60 1440,90 L1440,0 L0,0 Z"/>
      <!-- Front wave - most visible -->
      <path class="hero__surface-wave hero__surface-wave--1" d="M0,60 C240,100 480,20 720,60 C960,100 1200,20 1440,60 L1440,0 L0,0 Z"/>
    </svg>
  </div>

  <!-- Bubbles - with depth/perspective (minimal) -->
  <div class="hero__bubbles">
    <!-- Far bubbles (blurry, small, slow) -->
    {Array.from({ length: 3 }).map((_, i) => (
      <div
        class="hero__bubble hero__bubble--far"
        style={`
          --size: ${4 + Math.random() * 6}px;
          --x: ${10 + Math.random() * 80}%;
          --delay: ${Math.random() * 18}s;
          --duration: ${14 + Math.random() * 10}s;
          --wobble: ${-5 + Math.random() * 10}px;
          --blur: ${3 + Math.random() * 2}px;
          --opacity: ${0.25 + Math.random() * 0.2};
        `}
      ></div>
    ))}
    <!-- Mid bubbles (slightly blurry) -->
    {Array.from({ length: 3 }).map((_, i) => (
      <div
        class="hero__bubble hero__bubble--mid"
        style={`
          --size: ${6 + Math.random() * 10}px;
          --x: ${10 + Math.random() * 80}%;
          --delay: ${Math.random() * 15}s;
          --duration: ${10 + Math.random() * 8}s;
          --wobble: ${-10 + Math.random() * 20}px;
          --blur: ${1 + Math.random() * 1.5}px;
          --opacity: ${0.4 + Math.random() * 0.25};
        `}
      ></div>
    ))}
    <!-- Close bubbles (sharp, larger, fast) -->
    {Array.from({ length: 2 }).map((_, i) => (
      <div
        class="hero__bubble hero__bubble--close"
        style={`
          --size: ${12 + Math.random() * 18}px;
          --x: ${15 + Math.random() * 70}%;
          --delay: ${Math.random() * 12}s;
          --duration: ${8 + Math.random() * 6}s;
          --wobble: ${-15 + Math.random() * 30}px;
          --opacity: ${0.6 + Math.random() * 0.25};
        `}
      ></div>
    ))}
  </div>

  <!-- Content -->
  <div class="hero__content" id="heroContent">
    <div class="hero__inner container">
      <!-- Accroche visuelle -->
      <p class="hero__title" aria-hidden="true">
        <span class="hero__title-line">Plongez dans</span>
        <span class="hero__title-line hero__title-line--accent">l'excellence</span>
      </p>

      <!-- Main title (SEO) -->
      <h1 class="hero__heading">Entretien de piscine &amp; maintenance haut de gamme dans le Golfe de Saint-Tropez</h1>

      <!-- Subtitle -->
      <p class="hero__subtitle">
        Florent et son équipe prennent soin de votre bassin avec une approche simple&nbsp;: une piscine impeccable, un suivi régulier et un interlocuteur direct.
      </p>

      <!-- CTA buttons -->
      <div class="hero__cta">
        <a href="/contact" class="hero__cta-primary">
          <span>Nous contacter</span>
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17L17 7M17 7H7M17 7V17"/>
          </svg>
        </a>
        <a href="/contact#devis" class="hero__cta-secondary">
          <span>Demander un devis</span>
        </a>
      </div>

      <!-- Reassurance -->
      <div class="hero__stats">
        <div class="hero__stat">
          <img src={doneIcon.src} alt="" class="hero__stat-icon" />
          <span class="hero__stat-text">Toujours la m&ecirc;me &eacute;quipe &agrave; votre service</span>
        </div>
        <div class="hero__stat">
          <img src={doneIcon.src} alt="" class="hero__stat-icon" />
          <span class="hero__stat-text">Intervention discr&egrave;te</span>
        </div>
        <div class="hero__stat">
          <img src={doneIcon.src} alt="" class="hero__stat-icon" />
          <span class="hero__stat-text">Compte-rendu clair si vous &ecirc;tes absent via notre application</span>
        </div>
      </div>

    </div>
  </div>

  <!-- Scroll indicator - outside content, fixed to hero bottom -->
  <div class="hero__scroll">
    <span class="hero__scroll-text">Découvrir</span>
    <div class="hero__scroll-line">
      <div class="hero__scroll-dot"></div>
    </div>
  </div>

  <!-- Bottom wave transition - multiple layers -->
  <div class="hero__wave-bottom">
    <svg viewBox="0 0 1440 150" preserveAspectRatio="none">
      <!-- Back wave - cyan tint -->
      <path class="hero__wave-bottom--3" d="M0,30 C360,90 720,10 1080,50 C1260,70 1380,30 1440,40 L1440,150 L0,150 Z"/>
      <!-- Mid wave - lighter -->
      <path class="hero__wave-bottom--2" d="M0,50 C480,100 960,20 1440,70 L1440,150 L0,150 Z"/>
      <!-- Front wave - white -->
      <path class="hero__wave-bottom--1" d="M0,80 C240,40 480,100 720,60 C960,30 1200,90 1440,50 L1440,150 L0,150 Z"/>
    </svg>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    overflow: hidden;
  }

  /* Background gradient */
  .hero__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg,
      rgb(150, 220, 215) 0%,
      rgb(90, 195, 195) 15%,
      rgb(55, 175, 180) 35%,
      rgb(35, 155, 165) 55%,
      rgb(20, 130, 145) 75%,
      rgb(10, 105, 125) 100%
    );
    z-index: -1;
  }

  /* Water texture overlay */
  .hero__water-texture {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
    opacity: 0.8;
    mix-blend-mode: luminosity;
    filter: url(#underwater-distortion);
    transform: rotate(347deg) scale(1.2);
    backface-visibility: hidden;
  }

  .hero__water-texture img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* SVG filters - keep accessible but invisible */
  .hero__filters {
    position: absolute;
    width: 0;
    height: 0;
    pointer-events: none;
  }

  /* ═══════════════════════════════════════════
     WATER SURFACE - TOP
     ═══════════════════════════════════════════ */
  .hero__surface-top {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 80px;
    z-index: 5;
  }

  @media (min-width: 768px) {
    .hero__surface-top {
      height: 180px;
    }
  }

  .hero__surface-top svg {
    width: 100%;
    height: 100%;
  }

  /* Front wave - most opaque */
  .hero__surface-wave--1 {
    fill: rgba(255, 255, 255, 0.9);
    animation: surfaceWave1 6s ease-in-out infinite;
  }

  /* Mid wave */
  .hero__surface-wave--2 {
    fill: rgba(150, 220, 215, 0.75);
    animation: surfaceWave2 8s ease-in-out infinite;
  }

  /* Back wave - most transparent */
  .hero__surface-wave--3 {
    fill: rgba(90, 195, 195, 0.55);
    animation: surfaceWave3 10s ease-in-out infinite;
  }

  @keyframes surfaceWave1 {
    0%, 100% {
      d: path("M0,60 C240,100 480,20 720,60 C960,100 1200,20 1440,60 L1440,0 L0,0 Z");
    }
    50% {
      d: path("M0,50 C240,20 480,90 720,50 C960,20 1200,90 1440,50 L1440,0 L0,0 Z");
    }
  }

  @keyframes surfaceWave2 {
    0%, 100% {
      d: path("M0,90 C360,140 720,40 1080,90 C1260,120 1380,60 1440,90 L1440,0 L0,0 Z");
    }
    50% {
      d: path("M0,100 C360,50 720,130 1080,80 C1260,60 1380,110 1440,100 L1440,0 L0,0 Z");
    }
  }

  @keyframes surfaceWave3 {
    0%, 100% {
      d: path("M0,120 C240,160 480,80 720,120 C960,160 1200,80 1440,120 L1440,0 L0,0 Z");
    }
    50% {
      d: path("M0,130 C240,90 480,160 720,110 C960,80 1200,150 1440,130 L1440,0 L0,0 Z");
    }
  }

  /* ═══════════════════════════════════════════
     BUBBLES - With depth perspective
     ═══════════════════════════════════════════ */
  .hero__bubbles {
    position: absolute;
    inset: 0;
    z-index: 3;
    pointer-events: none;
    overflow: hidden;
    will-change: transform;
    contain: strict;
  }

  .hero__bubble {
    position: absolute;
    bottom: -30px;
    left: var(--x);
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    animation: bubbleFloat var(--duration) linear infinite;
    animation-delay: var(--delay);
    opacity: 0;
  }

  /* Far bubbles - blurry, in background */
  .hero__bubble--far {
    z-index: 1;
    filter: blur(var(--blur));
    background:
      radial-gradient(circle at 25% 25%,
        rgba(255, 255, 255, 0.7) 0%,
        transparent 30%
      ),
      radial-gradient(circle at 50% 50%,
        transparent 0%,
        transparent 60%,
        rgba(255, 255, 255, 0.15) 80%,
        rgba(255, 255, 255, 0.1) 100%
      );
    border: 1px solid rgba(255, 255, 255, 0.25);
  }

  /* Mid bubbles - slightly blurry */
  .hero__bubble--mid {
    z-index: 2;
    filter: blur(var(--blur));
    background:
      radial-gradient(circle at 20% 20%,
        rgba(255, 255, 255, 0.9) 0%,
        rgba(255, 255, 255, 0.4) 15%,
        transparent 40%
      ),
      radial-gradient(circle at 70% 80%,
        rgba(255, 255, 255, 0.3) 0%,
        transparent 30%
      ),
      radial-gradient(circle at 50% 50%,
        transparent 0%,
        transparent 55%,
        rgba(180, 230, 240, 0.2) 75%,
        rgba(255, 255, 255, 0.15) 100%
      );
    border: 1px solid rgba(255, 255, 255, 0.35);
  }

  /* Close bubbles - sharp, detailed, realistic */
  .hero__bubble--close {
    z-index: 3;
    background:
      radial-gradient(ellipse 50% 40% at 25% 25%,
        rgba(255, 255, 255, 0.95) 0%,
        rgba(255, 255, 255, 0.6) 30%,
        transparent 70%
      ),
      radial-gradient(circle at 65% 70%,
        rgba(255, 255, 255, 0.4) 0%,
        transparent 25%
      ),
      radial-gradient(circle at 50% 50%,
        transparent 0%,
        transparent 50%,
        rgba(150, 220, 235, 0.15) 70%,
        rgba(200, 240, 250, 0.25) 85%,
        rgba(255, 255, 255, 0.2) 100%
      );
    border: 1px solid rgba(255, 255, 255, 0.4);
    box-shadow:
      inset 0 0 10px rgba(255, 255, 255, 0.1),
      0 2px 8px rgba(0, 150, 180, 0.08);
  }

  @keyframes bubbleFloat {
    0% {
      transform: translateY(0) translateX(0) scale(0.6);
      opacity: 0;
    }
    3% {
      opacity: var(--opacity, 0.8);
      transform: translateY(-3vh) translateX(0) scale(1);
    }
    15% {
      transform: translateY(-15vh) translateX(var(--wobble)) scale(1);
    }
    30% {
      transform: translateY(-30vh) translateX(calc(var(--wobble) * -0.5)) scale(1);
    }
    45% {
      transform: translateY(-45vh) translateX(calc(var(--wobble) * 0.7)) scale(0.98);
    }
    60% {
      transform: translateY(-60vh) translateX(calc(var(--wobble) * -0.4)) scale(0.96);
    }
    75% {
      transform: translateY(-75vh) translateX(calc(var(--wobble) * 0.5)) scale(0.94);
    }
    90% {
      transform: translateY(-90vh) translateX(calc(var(--wobble) * -0.3)) scale(0.92);
      opacity: var(--opacity, 0.8);
    }
    100% {
      transform: translateY(-105vh) translateX(0) scale(0.9);
      opacity: 0;
    }
  }

  /* ═══════════════════════════════════════════
     CONTENT
     ═══════════════════════════════════════════ */
  .hero__content {
    position: relative;
    z-index: 10;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 80px;
    padding-bottom: var(--space-10);
    will-change: transform, opacity;
  }

  @media (min-width: 768px) {
    .hero__content {
      padding-top: 100px;
      padding-bottom: var(--space-16);
    }
  }

  .hero__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-4);
    max-width: 100%;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .hero__inner {
      gap: var(--space-6);
    }
  }

  /* SEO Heading */
  .hero__heading {
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    color: var(--color-dark);
    text-align: center;
    line-height: 1.4;
    max-width: 100%;
    padding-inline: var(--space-2);
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 0.3s;
  }

  @media (min-width: 768px) {
    .hero__heading {
      font-size: var(--text-2xl);
    }
  }

  /* Title */
  .hero__title {
    display: flex;
    flex-direction: column;
    gap: 0;
    font-size: clamp(2rem, 10vw, 7rem);
  }

  @media (min-width: 768px) {
    .hero__title {
      filter: url(#underwater-distortion);
    }
  }

  .hero__title-line {
    font-family: var(--font-display);
    font-size: clamp(2rem, 10vw, 7rem);
    font-weight: var(--font-extrabold);
    line-height: 1;
    letter-spacing: -0.03em;
    color: var(--color-dark);
    text-shadow: 0 2px 20px rgba(255, 255, 255, 0.5);
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s var(--ease-out-expo) forwards;
  }

  .hero__title-line:nth-child(1) {
    animation-delay: 0.4s;
  }
  .hero__title-line:nth-child(2) {
    animation-delay: 0.6s;
  }

  .hero__title-line--accent {
    background: linear-gradient(135deg, #0284C7 0%, #0EA5E9 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Subtitle */
  .hero__subtitle {
    font-size: var(--text-sm);
    color: var(--color-dark);
    max-width: 580px;
    line-height: 1.6;
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 0.8s;
  }

  @media (min-width: 768px) {
    .hero__subtitle {
      font-size: var(--text-base);
    }
  }

  /* CTA */
  .hero__cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
    margin-top: var(--space-3);
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards 1s;
    width: 100%;
  }

  @media (min-width: 768px) {
    .hero__cta {
      flex-direction: row;
      justify-content: center;
      gap: var(--space-4);
      margin-top: var(--space-4);
      width: auto;
    }
  }

  .hero__cta-primary {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    font-size: var(--text-sm);
    background: linear-gradient(
      135deg,
      rgba(30, 41, 59, 0.95) 0%,
      rgba(15, 23, 42, 0.95) 100%
    );
    color: white;
    font-weight: var(--font-semibold);
    border-radius: var(--radius-full);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow:
      0 4px 15px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.15),
      inset 0 -2px 5px rgba(0, 0, 0, 0.2);
    transition: all 0.4s var(--ease-out-expo);
    overflow: hidden;
  }

  /* Bubble shine */
  .hero__cta-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.25) 0%,
      rgba(255, 255, 255, 0.05) 50%,
      transparent 100%
    );
    border-radius: var(--radius-full) var(--radius-full) 50% 50%;
    pointer-events: none;
  }

  .hero__cta-primary:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow:
      0 8px 25px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.2),
      inset 0 -2px 5px rgba(0, 0, 0, 0.2);
  }

  .hero__cta-primary:active {
    transform: translateY(-1px) scale(0.98);
  }

  .hero__cta-primary svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s var(--ease-out-expo);
    position: relative;
    z-index: 1;
  }

  .hero__cta-primary span {
    position: relative;
    z-index: 1;
  }

  .hero__cta-primary:hover svg {
    transform: translate(2px, -2px);
  }

  .hero__cta-secondary {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: var(--space-3) var(--space-5);
    font-size: var(--text-sm);
    background: rgba(255, 255, 255, 0.75);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    color: var(--color-dark);
    font-weight: var(--font-medium);
    border-radius: var(--radius-full);
    border: 1px solid rgba(255, 255, 255, 0.9);
    box-shadow:
      0 4px 15px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 1),
      inset 0 -1px 3px rgba(0, 0, 0, 0.05);
    transition: all 0.4s var(--ease-out-expo);
    overflow: hidden;
  }

  /* Bubble shine */
  .hero__cta-secondary::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.6) 0%,
      rgba(255, 255, 255, 0.2) 50%,
      transparent 100%
    );
    border-radius: var(--radius-full) var(--radius-full) 50% 50%;
    pointer-events: none;
  }

  .hero__cta-secondary span {
    position: relative;
    z-index: 1;
  }

  .hero__cta-secondary:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-3px) scale(1.02);
    box-shadow:
      0 6px 20px rgba(90, 195, 195, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 1),
      inset 0 -1px 3px rgba(0, 0, 0, 0.05);
  }

  .hero__cta-secondary:active {
    transform: translateY(-1px) scale(0.98);
  }

  /* Scroll indicator - hidden on mobile, fixed on desktop */
  .hero__scroll {
    display: none;
  }

  @media (min-width: 768px) {
    .hero__scroll {
      position: fixed;
      bottom: 30px;
      left: 0;
      right: 0;
      margin: 0 auto;
      width: fit-content;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--space-2);
      opacity: 0;
      animation: fadeInUp 0.8s ease forwards 1.2s;
      z-index: 100;
      transition: opacity 0.3s ease;
    }
  }

  .hero__scroll.hidden {
    opacity: 0 !important;
    pointer-events: none;
  }

  .hero__scroll-text {
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-dark);
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(8px);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-full);
  }

  .hero__scroll-line {
    width: 2px;
    height: 30px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: var(--radius-full);
    position: relative;
    overflow: hidden;
  }

  .hero__scroll-dot {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 12px;
    background: var(--color-primary);
    border-radius: var(--radius-full);
