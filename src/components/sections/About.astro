---
const reasons = [
  {
    title: '15 ans d\'expérience',
    text: 'Dans l\'entretien de piscine et la maintenance.',
    icon: 'M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z',
  },
  {
    title: 'Réponse sous 72h',
    text: 'Par un membre de l\'équipe Aquacare.',
    icon: 'M8.625 12a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 01-2.555-.337A5.972 5.972 0 015.41 20.97a5.969 5.969 0 01-.474-.065 4.48 4.48 0 00.978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25z',
  },
  {
    title: 'Discrétion & soin',
    text: 'Le standard haut de gamme attendu dans le Golfe de Saint-Tropez.',
    icon: 'M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z',
  },
];
---

<section class="about" id="about">
  <div class="about__container container">
    <div class="about__header">
      <span class="about__label">Nos engagements</span>
      <h2 class="about__title">Pourquoi choisir Aquacare pour l'entretien de votre <span class="text-water">piscine</span>&nbsp;?</h2>
    </div>

    <!-- Pool + badges scene -->
    <div class="about__scene">
      <!-- Pool -->
      <div class="about__pool-wrapper">
        <div class="about__pool-border">
          <svg viewBox="0 0 400 300" fill="none" preserveAspectRatio="none">
            <rect x="10" y="10" width="380" height="280" rx="20" stroke="#d1d5db" stroke-width="2" stroke-dasharray="8 6"/>
          </svg>
        </div>
        <div class="about__pool">
          <svg class="about__pool-waves" viewBox="0 0 300 180" preserveAspectRatio="none">
            <path class="about__wave about__wave--1" d="M-50,20 Q0,15 50,20 T150,20 T250,20 T350,20"><animate attributeName="d" dur="2.8s" repeatCount="indefinite" values="M-50,20 Q0,15 50,20 T150,20 T250,20 T350,20;M-50,20 Q0,25 50,20 T150,20 T250,20 T350,20;M-50,20 Q0,15 50,20 T150,20 T250,20 T350,20" /></path>
            <path class="about__wave about__wave--2" d="M-50,40 Q0,35 50,40 T150,40 T250,40 T350,40"><animate attributeName="d" dur="3.2s" repeatCount="indefinite" values="M-50,40 Q0,35 50,40 T150,40 T250,40 T350,40;M-50,40 Q0,45 50,40 T150,40 T250,40 T350,40;M-50,40 Q0,35 50,40 T150,40 T250,40 T350,40" /></path>
            <path class="about__wave about__wave--3" d="M-50,60 Q0,55 50,60 T150,60 T250,60 T350,60"><animate attributeName="d" dur="3.6s" repeatCount="indefinite" values="M-50,60 Q0,55 50,60 T150,60 T250,60 T350,60;M-50,60 Q0,65 50,60 T150,60 T250,60 T350,60;M-50,60 Q0,55 50,60 T150,60 T250,60 T350,60" /></path>
            <path class="about__wave about__wave--4" d="M-50,80 Q0,75 50,80 T150,80 T250,80 T350,80"><animate attributeName="d" dur="3.9s" repeatCount="indefinite" values="M-50,80 Q0,75 50,80 T150,80 T250,80 T350,80;M-50,80 Q0,85 50,80 T150,80 T250,80 T350,80;M-50,80 Q0,75 50,80 T150,80 T250,80 T350,80" /></path>
            <path class="about__wave about__wave--5" d="M-50,100 Q0,95 50,100 T150,100 T250,100 T350,100"><animate attributeName="d" dur="4.2s" repeatCount="indefinite" values="M-50,100 Q0,95 50,100 T150,100 T250,100 T350,100;M-50,100 Q0,105 50,100 T150,100 T250,100 T350,100;M-50,100 Q0,95 50,100 T150,100 T250,100 T350,100" /></path>
            <path class="about__wave about__wave--6" d="M-50,120 Q0,115 50,120 T150,120 T250,120 T350,120"><animate attributeName="d" dur="4.5s" repeatCount="indefinite" values="M-50,120 Q0,115 50,120 T150,120 T250,120 T350,120;M-50,120 Q0,125 50,120 T150,120 T250,120 T350,120;M-50,120 Q0,115 50,120 T150,120 T250,120 T350,120" /></path>
            <path class="about__wave about__wave--7" d="M-50,140 Q0,135 50,140 T150,140 T250,140 T350,140"><animate attributeName="d" dur="4.8s" repeatCount="indefinite" values="M-50,140 Q0,135 50,140 T150,140 T250,140 T350,140;M-50,140 Q0,145 50,140 T150,140 T250,140 T350,140;M-50,140 Q0,135 50,140 T150,140 T250,140 T350,140" /></path>
            <path class="about__wave about__wave--8" d="M-50,160 Q0,155 50,160 T150,160 T250,160 T350,160"><animate attributeName="d" dur="5.1s" repeatCount="indefinite" values="M-50,160 Q0,155 50,160 T150,160 T250,160 T350,160;M-50,160 Q0,165 50,160 T150,160 T250,160 T350,160;M-50,160 Q0,155 50,160 T150,160 T250,160 T350,160" /></path>
          </svg>
        </div>
      </div>

      <!-- Badge gauche : 15 ans d'expérience -->
      <div class="about__badge about__badge--left" style="--delay: 0s">
        <span class="about__badge-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="22" height="22"><path d={reasons[0].icon} stroke-linecap="round" stroke-linejoin="round"/></svg>
        </span>
        <div class="about__badge-content">
          <span class="about__badge-title">{reasons[0].title}</span>
          <span class="about__badge-text">{reasons[0].text}</span>
        </div>
      </div>

      <!-- Badge haut : Réponse sous 72h -->
      <div class="about__badge about__badge--top" style="--delay: 0.8s">
        <span class="about__badge-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="22" height="22"><path d={reasons[1].icon} stroke-linecap="round" stroke-linejoin="round"/></svg>
        </span>
        <div class="about__badge-content">
          <span class="about__badge-title">{reasons[1].title}</span>
          <span class="about__badge-text">{reasons[1].text}</span>
        </div>
      </div>

      <!-- Badge droite : Discrétion & soin -->
      <div class="about__badge about__badge--right" style="--delay: 1.6s">
        <span class="about__badge-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="22" height="22"><path d={reasons[2].icon} stroke-linecap="round" stroke-linejoin="round"/></svg>
        </span>
        <div class="about__badge-content">
          <span class="about__badge-title">{reasons[2].title}</span>
          <span class="about__badge-text">{reasons[2].text}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    position: relative;
    padding-top: var(--section-gap);
    padding-bottom: 0;
    background: var(--color-light);
  }

  /* Repeating gradient pattern removed for cleaner palette */

  .about__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-10);
  }

  .about__header {
    text-align: center;
    max-width: 700px;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .about__label {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-primary);
  }

  .about__title {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--color-dark);
  }

  /* Scene: pool + badges */
  .about__scene {
    position: relative;
    width: 100%;
    max-width: 920px;
    height: 380px;
    margin-inline: auto;
  }

  .about__pool-wrapper {
    position: absolute;
    top: 70px;
    left: 50%;
    transform: translateX(-50%);
    width: 340px;
    height: 255px;
  }

  .about__pool-border {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .about__pool-border svg {
    width: 100%;
    height: 100%;
  }

  .about__pool {
    position: absolute;
    top: 15%;
    left: 12%;
    right: 12%;
    bottom: 20%;
    background: linear-gradient(180deg,
      rgb(130, 210, 210) 0%,
      rgb(90, 190, 195) 50%,
      rgb(70, 170, 180) 100%
    );
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow:
      inset 0 2px 20px rgba(255, 255, 255, 0.3),
      0 10px 40px rgba(90, 195, 195, 0.3);
  }

  .about__pool-waves {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .about__wave {
    fill: none;
    stroke-width: 1.5;
    stroke-linecap: round;
  }

  .about__wave--1 { stroke: rgba(255, 255, 255, 0.35); }
  .about__wave--2 { stroke: rgba(255, 255, 255, 0.32); }
  .about__wave--3 { stroke: rgba(255, 255, 255, 0.29); }
  .about__wave--4 { stroke: rgba(255, 255, 255, 0.26); }
  .about__wave--5 { stroke: rgba(255, 255, 255, 0.23); }
  .about__wave--6 { stroke: rgba(255, 255, 255, 0.20); }
  .about__wave--7 { stroke: rgba(255, 255, 255, 0.17); }
  .about__wave--8 { stroke: rgba(255, 255, 255, 0.14); }

  /* Badges around pool */
  .about__badge {
    position: absolute;
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    background: var(--color-white);
    padding: var(--space-4) var(--space-5);
    border-radius: var(--radius-xl);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    width: 240px;
    animation: floatBadge 4s ease-in-out infinite;
    animation-delay: var(--delay);
    z-index: 2;
  }

  .about__badge--left {
    left: 0;
    top: 55%;
    transform: translateY(-50%);
  }

  .about__badge--top {
    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .about__badge--right {
    right: 0;
    top: 55%;
    transform: translateY(-50%);
  }

  /* Float animations preserving base transforms */
  .about__badge--left {
    animation-name: floatBadgeLeft;
  }
  .about__badge--top {
    animation-name: floatBadgeTop;
  }
  .about__badge--right {
    animation-name: floatBadgeRight;
  }

  @keyframes floatBadgeLeft {
    0%, 100% { transform: translateY(-50%); }
    50% { transform: translateY(calc(-50% - 6px)); }
  }
  @keyframes floatBadgeTop {
    0%, 100% { transform: translateX(-50%); }
    50% { transform: translate(-50%, -6px); }
  }
  @keyframes floatBadgeRight {
    0%, 100% { transform: translateY(-50%); }
    50% { transform: translateY(calc(-50% - 6px)); }
  }

  /* Mobile: stack vertically */
  @media (max-width: 899px) {
    .about__scene {
      height: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--space-5);
    }

    .about__pool-wrapper {
      position: relative;
      top: auto;
      left: auto;
      transform: none;
      width: 300px;
      height: 225px;
    }

    .about__badge {
      position: relative;
      top: auto;
      left: auto;
      right: auto;
      bottom: auto;
      transform: none;
      width: 100%;
      max-width: 340px;
      animation: none;
    }
  }

  .about__badge-icon {
    width: 44px;
    height: 44px;
    min-width: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary-soft);
    color: var(--color-primary);
    border-radius: var(--radius-lg);
    flex-shrink: 0;
  }

  .about__badge-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .about__badge-title {
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    color: var(--color-dark);
  }

  .about__badge-text {
    font-size: 13px;
    color: var(--color-gray-600);
    line-height: var(--leading-relaxed);
  }
</style>
