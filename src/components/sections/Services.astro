---
import imgEntretien from '../../assets/images/Divers piscine/IMG_4695.jpeg';
import imgLocal from '../../assets/images/local technique/IMG_2759.jpeg';
import imgEquipement from '../../assets/images/pompe a chaleur/IMG_0118.jpeg';

const services = [
  {
    number: '01',
    title: 'Contrats d\'entretien',
    href: '/entretien',
    description: 'Pour profiter d\'une eau claire et d\'un bassin propre, toute la saison.',
    features: ['Particuliers prioritaires', 'Villas', 'Résidences secondaires'],
    icon: 'M12 3C12 3 7 9 7 13a5 5 0 0010 0c0-4-5-10-5-10z',
    photo: imgEntretien,
    alt: 'Entretien de piscine dans le Var — eau claire et bassin propre',
  },
  {
    number: '02',
    title: 'Rénovation & local technique',
    href: '/renovation',
    description: 'Remise à niveau, rénovation du local technique, amélioration du confort et de la fiabilité.',
    features: ['Remise à niveau', 'Local technique', 'Confort & fiabilité'],
    icon: 'M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085',
    photo: imgLocal,
    alt: 'Rénovation de local technique piscine dans le Golfe de Saint-Tropez',
  },
  {
    number: '03',
    title: 'Équipements & automatisation',
    href: '/renovation',
    description: 'Régulation pH, régulation chlore, électrolyse au sel, chauffage/pompe à chaleur, filtration, solutions connectées.',
    note: 'De plus en plus de systèmes sont connectés et automatisés\u00a0: nous les installons, les paramétrons, puis nous vous expliquons concrètement ce que cela change dans votre quotidien.',
    features: ['Régulation automatique', 'Électrolyse au sel', 'Solutions connectées'],
    icon: 'M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z',
    photo: imgEquipement,
    alt: 'Installation pompe à chaleur et équipements piscine automatisés',
  },
];
---

<section class="services" id="services">
  <div class="services__container container">
    <!-- Header -->
    <div class="services__header">
      <span class="services__label">Nos services</span>
      <h2 class="services__title">
        <span class="services__title-line">Ce que nous</span>
        <span class="services__title-line services__title-line--gradient">faisons le mieux</span>
      </h2>
      <p class="services__intro">
        Depuis 2009, nous accompagnons les habitants du Var dans tous leurs projets piscine.
      </p>
    </div>

    <!-- Services grid -->
    <div class="services__grid">
      {services.map((service, index) => (
        <article class="service-card" style={`--delay: ${index * 0.15}s`}>
          <div class="service-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="28" height="28">
              <path d={service.icon} stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>

          <span class="service-card__number">{service.number}</span>

          <h3 class="service-card__title">{service.title}</h3>

          <p class="service-card__description">{service.description}</p>
          {service.note && <p class="service-card__note">{service.note}</p>}

          <ul class="service-card__features">
            {service.features.map((feature) => (
              <li class="service-card__feature">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
                  <path d="M5 13l4 4L19 7" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>

          <a href={service.href} class="service-card__link">
            <span>En savoir plus</span>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </a>

          <div class="service-card__bg"></div>
          <img src={service.photo.src} alt={service.alt} class="service-card__photo" loading="lazy" decoding="async" />
        </article>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="services__cta">
      <a href="/contact" class="btn btn--primary">
        <span>Contacter Aquacare Service</span>
      </a>
    </div>
  </div>

  <!-- Decorative elements -->
  <div class="services__deco services__deco--1"></div>
  <div class="services__deco services__deco--2"></div>

  <div class="services__wave">
    <svg viewBox="0 0 1440 80" preserveAspectRatio="none">
      <path d="M0,40 C240,80 480,0 720,40 C960,80 1200,0 1440,40 L1440,80 L0,80 Z" fill="var(--color-dark)"/>
    </svg>
    <svg class="services__wave-invert" viewBox="0 0 1440 80" preserveAspectRatio="none">
      <path d="M0,40 C240,80 480,0 720,40 C960,80 1200,0 1440,40 L1440,80 L0,80 Z" fill="var(--color-dark)"/>
    </svg>
  </div>
</section>

<style>
  .services {
    position: relative;
    padding-block: var(--section-gap);
    background: var(--color-light);
  }

  .services__container {
    position: relative;
    z-index: var(--z-base);
  }

  /* Header */
  .services__header {
    text-align: center;
    margin-bottom: var(--space-16);
    max-width: 700px;
    margin-inline: auto;
  }

  .services__label {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-primary);
    margin-bottom: var(--space-4);
  }

  .services__title {
    font-size: var(--text-section);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--color-dark);
    margin-bottom: var(--space-6);
  }

  .services__title-line {
    display: block;
  }

  .services__title-line--gradient {
    background: var(--gradient-ocean);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .services__intro {
    font-size: var(--text-lg);
    color: var(--color-gray-600);
    line-height: var(--leading-relaxed);
  }

  /* Grid */
  .services__grid {
    display: grid;
    gap: var(--space-8);
    margin-bottom: var(--space-16);
  }

  @media (min-width: 768px) {
    .services__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Service Card */
  .service-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: var(--space-8);
    background: #153d8a17;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    border: 1px solid rgba(14, 165, 233, 0.1);
    transition: transform 0.4s var(--ease-out-expo), box-shadow 0.4s ease, border-color 0.3s ease;
    overflow: hidden;
  }

  .service-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-xl);
    border-color: rgba(14, 165, 233, 0.3);
  }

  /* Background photo — adjust --card-photo-opacity to control visibility */
  .service-card__photo {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: var(--card-photo-opacity, 0.12);
    pointer-events: none;
    z-index: 0;
    transition: opacity 0.4s ease;
  }

  .service-card:hover .service-card__photo {
    opacity: calc(var(--card-photo-opacity, 0.06) * 2);
  }

  /* Ensure all card content stays above the photo */
  .service-card > *:not(.service-card__photo) {
    position: relative;
    z-index: 1;
  }

  .service-card__bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-ocean);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s var(--ease-out-expo);
  }

  .service-card:hover .service-card__bg {
    transform: scaleX(1);
  }

  .service-card__icon {
    position: relative;
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #E0F4F3;
    border-radius: 50% 50% 50% 50% / 30% 30% 70% 70%;
    color: var(--color-primary);
    margin-bottom: var(--space-6);
    margin-top: 40px;
  }

  /* Triangle pointe de la goutte */
  .service-card__icon::before {
    content: '';
    position: absolute;
    top: -39px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 26px solid transparent;
    border-right: 28px solid transparent;
    border-bottom: 50px solid #E0F4F3;
  }

  /* Reflet brillant sur la goutte */
  .service-card__icon::after {
    content: '';
    position: absolute;
    top: 8px;
    left: 12px;
    width: 10px;
    height: 10px;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 50%;
  }

  .service-card__icon svg {
    width: 28px;
    height: 28px;
    position: relative;
    z-index: 1;
  }

  .service-card__number {
    position: absolute;
    top: var(--space-6);
    right: var(--space-6);
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    color: var(--color-gray-300);
  }

  .service-card__title {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--color-dark);
    margin-bottom: var(--space-4);
  }

  .service-card__description {
    font-size: var(--text-base);
    color: var(--color-gray-600);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  .service-card__note {
    font-size: 13px;
    font-style: italic;
    color: var(--color-gray-600);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  .service-card__features {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-bottom: var(--space-8);
    flex-grow: 1;
  }

  .service-card__feature {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-gray-600);
  }

  .service-card__feature svg {
    width: 16px;
    height: 16px;
    color: var(--color-secondary);
    flex-shrink: 0;
  }

  .service-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: auto;
    transition: gap 0.3s var(--ease-out-expo);
  }

  .service-card__link:hover {
    gap: var(--space-3);
  }

  .service-card__link svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s var(--ease-out-expo);
  }

  .service-card__link:hover svg {
    transform: translate(2px, -2px);
  }

  /* CTA */
  .services__cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
    text-align: center;
  }

  @media (min-width: 768px) {
    .services__cta {
      flex-direction: row;
      justify-content: center;
    }
  }

  .services__cta-text {
    font-size: var(--text-lg);
    color: var(--color-gray-600);
  }

  /* Decorative elements removed for cleaner palette */
  .services__deco {
    display: none;
  }

  .services__wave {
    position: absolute;
    bottom: -50px;
    left: 0;
    right: 0;
    line-height: 0;
    z-index: 2;
  }

  .services__wave svg {
    width: 100%;
    height: 50px;
    display: block;
  }

  .services__wave-invert {
    transform: rotate(180deg);
  }
</style>

<script>
  // Animate cards on scroll
  const cards = document.querySelectorAll('.service-card');

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.classList.add('is-visible');
        }, index * 100);
      }
    });
  }, { threshold: 0.2 });

  cards.forEach(card => observer.observe(card));
</script>
