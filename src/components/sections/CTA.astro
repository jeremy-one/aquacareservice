        <div class="cta__divider">
          <span>ou</span>
        </div>

        <a href="tel:+33XXXXXXXXX" class="cta__phone">
          <span class="cta__phone-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
