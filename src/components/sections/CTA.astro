          </svg>
          <span>98% satisfaits</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    position: relative;
    padding-block: var(--section-gap);
    background: linear-gradient(180deg, var(--color-light) 0%, var(--color-primary-soft) 100%);
    overflow: hidden;
  }

  /* Background */
  .cta__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .cta__wave {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 200px;
  }

  .cta__wave svg {
    width: 100%;
    height: 100%;
  }

  .cta__wave--1 path {
    fill: var(--color-primary);
    opacity: 0.1;
    animation: waveMove1 8s ease-in-out infinite;
  }

  .cta__wave--2 path {
    fill: var(--color-secondary);
    opacity: 0.08;
    animation: waveMove2 10s ease-in-out infinite;
  }

  @keyframes waveMove1 {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(-5%); }
  }

  @keyframes waveMove2 {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(5%); }
  }

  .cta__particles {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .cta__particle {
    position: absolute;
    bottom: -20px;
    left: var(--x);
    width: var(--size);
    height: var(--size);
    background: var(--color-primary);
    border-radius: 50%;
    opacity: 0.3;
    animation: floatUp 12s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  @keyframes floatUp {
    0% { transform: translateY(0); opacity: 0; }
    10% { opacity: 0.3; }
    90% { opacity: 0.1; }
    100% { transform: translateY(-100vh); opacity: 0; }
  }

  /* Container */
  .cta__container {
    position: relative;
    z-index: var(--z-base);
  }

  .cta__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-8);
    max-width: 800px;
    margin-inline: auto;
  }

  /* Badge */
  .cta__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: var(--color-white);
    border-radius: var(--radius-full);
    box-shadow: var(--shadow-md);
  }

  .cta__badge-dot {
    width: 8px;
    height: 8px;
    background: var(--color-secondary);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.2); }
  }

  .cta__badge-text {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-dark);
  }

  /* Title */
  .cta__title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 6vw, 4rem);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--color-dark);
  }

  .cta__title-line {
    display: block;
  }

  .cta__title-line--accent {
    background: var(--gradient-ocean);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .cta__dot {
    -webkit-text-fill-color: var(--color-primary);
  }

  .cta__subtitle {
    font-size: var(--text-lg);
    color: var(--color-gray-600);
    line-height: var(--leading-relaxed);
  }

  /* Actions */
  .cta__actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
    margin-top: var(--space-4);
  }

  @media (min-width: 768px) {
    .cta__actions {
      flex-direction: row;
      gap: var(--space-8);
    }
  }

  .cta__btn-main {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-5) var(--space-8);
    background: var(--gradient-ocean);
    color: var(--color-white);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    border-radius: var(--radius-full);
    box-shadow: 0 8px 30px var(--color-primary-glow);
    transition: transform 0.3s var(--ease-out-expo), box-shadow 0.3s ease;
  }

  .cta__btn-main:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px var(--color-primary-glow);
  }

  .cta__btn-icon {
    display: flex;
    width: 24px;
    height: 24px;
  }

  .cta__btn-icon svg {
    width: 100%;
    height: 100%;
    transition: transform 0.3s var(--ease-out-expo);
  }

  .cta__btn-main:hover .cta__btn-icon svg {
    transform: translate(3px, -3px);
  }

  .cta__divider {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .cta__phone {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    transition: transform 0.3s var(--ease-out-expo), box-shadow 0.3s ease;
  }

  .cta__phone:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .cta__phone-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary-soft);
    border-radius: var(--radius-lg);
    color: var(--color-primary);
  }

  .cta__phone-icon svg {
    width: 24px;
    height: 24px;
  }

  .cta__phone-content {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .cta__phone-label {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gray-500);
  }

  .cta__phone-number {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-dark);
  }

  /* Trust badges */
  .cta__trust {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-6);
    margin-top: var(--space-8);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-gray-200);
  }

  .cta__trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-gray-600);
  }

  .cta__trust-item svg {
    width: 20px;
    height: 20px;
    color: var(--color-primary);
  }
</style>
