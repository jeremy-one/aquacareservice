---
const currentYear = new Date().getFullYear();

const links = [
  { href: '/services', label: 'Services' },
  { href: '/realisations', label: 'Réalisations' },
  { href: '/a-propos', label: 'À propos' },
  { href: '/contact', label: 'Contact' },
];

const socials = [
  { href: '#', label: 'Instagram', short: 'IG' },
  { href: '#', label: 'Facebook', short: 'FB' },
  { href: '#', label: 'LinkedIn', short: 'LI' },
];
---

<footer class="footer">
  <div class="footer__container container">
    <!-- Top section -->
    <div class="footer__top">
      <!-- Logo & tagline -->
      <div class="footer__brand">
        <a href="/" class="footer__logo">
          <img src="/LOGO LONG.svg" alt="Aquacare Service" class="footer__logo-img" />
        </a>
        <p class="footer__tagline">
          Créateurs de piscines d'exception dans le Var depuis 2009.
        </p>

        <!-- Social links -->
        <div class="footer__socials">
          {socials.map((social) => (
            <a href={social.href} class="footer__social" aria-label={social.label}>
              {social.short}
            </a>
          ))}
        </div>
      </div>

      <!-- Navigation -->
      <nav class="footer__nav">
        <h4 class="footer__nav-title">Navigation</h4>
        <ul class="footer__nav-list">
          {links.map((link) => (
            <li>
              <a href={link.href} class="footer__nav-link">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Services -->
      <div class="footer__services">
        <h4 class="footer__nav-title">Services</h4>
        <ul class="footer__nav-list">
          <li><a href="/services#construction" class="footer__nav-link">Construction</a></li>
          <li><a href="/services#entretien" class="footer__nav-link">Entretien</a></li>
          <li><a href="/services#renovation" class="footer__nav-link">Rénovation</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div class="footer__contact">
        <h4 class="footer__nav-title">Contact</h4>
        <div class="footer__contact-list">
          <a href="mailto:contact@aquacareservice.fr" class="footer__contact-link">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            contact@aquacareservice.fr
          </a>
          <a href="tel:+33XXXXXXXXX" class="footer__contact-link">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            +33 X XX XX XX XX
          </a>
          <p class="footer__contact-address">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Var (83), France
          </p>
        </div>
      </div>
    </div>

    <!-- Bottom section -->
    <div class="footer__bottom">
      <div class="footer__copy">
        <span>&copy; {currentYear} Aquacare Service. Tous droits réservés.</span>
      </div>

      <div class="footer__legal">
        <a href="/mentions-legales" class="footer__legal-link">Mentions légales</a>
        <span class="footer__legal-sep">|</span>
        <a href="/politique-confidentialite" class="footer__legal-link">Confidentialité</a>
      </div>
    </div>
  </div>

  <!-- Back to top -->
  <button class="footer__back-top" aria-label="Retour en haut">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 19V5M5 12l7-7 7 7"/>
    </svg>
  </button>

  <!-- Decorative wave -->
  <div class="footer__wave">
    <svg viewBox="0 0 1440 100" preserveAspectRatio="none">
      <path d="M0,50 C360,100 1080,0 1440,50 L1440,0 L0,0 Z"/>
    </svg>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    padding-block: var(--space-20) var(--space-8);
    background: var(--color-dark);
    color: var(--color-gray-300);
    overflow: hidden;
  }

  .footer__wave {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 50px;
    pointer-events: none;
  }

  .footer__wave svg {
    width: 100%;
    height: 100%;
  }

  .footer__wave path {
    fill: var(--color-primary-light);
  }

  .footer__container {
    position: relative;
    z-index: 1;
  }

  /* Top */
  .footer__top {
    display: grid;
    gap: var(--space-10);
    padding-bottom: var(--space-12);
    border-bottom: 1px solid var(--color-gray-700);
  }

  @media (min-width: 768px) {
    .footer__top {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer__top {
      grid-template-columns: 2fr 1fr 1fr 1.5fr;
    }
  }

  /* Brand */
  .footer__brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .footer__logo {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
  }

  .footer__logo-img {
    height: 50px;
    width: auto;
    filter: brightness(0) invert(1);
  }

  .footer__tagline {
    font-size: var(--text-base);
    color: var(--color-gray-400);
    max-width: 300px;
    line-height: var(--leading-relaxed);
  }

  .footer__socials {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-4);
  }

  .footer__social {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-gray-800);
    border-radius: var(--radius-lg);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-gray-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: background 0.3s ease, color 0.3s ease;
  }

  .footer__social:hover {
    background: var(--color-primary);
    color: var(--color-white);
  }

  /* Nav */
  .footer__nav-title {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-white);
    margin-bottom: var(--space-4);
  }

  .footer__nav-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer__nav-link {
    font-size: var(--text-base);
    color: var(--color-gray-400);
    transition: color 0.3s ease;
  }

  .footer__nav-link:hover {
    color: var(--color-primary);
  }

  /* Contact */
  .footer__contact-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer__contact-link,
  .footer__contact-address {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-base);
    color: var(--color-gray-400);
    transition: color 0.3s ease;
  }

  .footer__contact-link:hover {
    color: var(--color-primary);
  }

  .footer__contact-link svg,
  .footer__contact-address svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    color: var(--color-primary);
  }

  /* Bottom */
  .footer__bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding-top: var(--space-8);
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      text-align: left;
    }
  }

  .footer__copy {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
  }

  .footer__legal {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
  }

  .footer__legal-link {
    font-size: var(--text-sm);
    color: var(--color-gray-500);
    transition: color 0.3s ease;
  }

  .footer__legal-link:hover {
    color: var(--color-gray-300);
  }

  .footer__legal-sep {
    color: var(--color-gray-600);
  }

  /* Back to top */
  .footer__back-top {
    position: absolute;
    top: var(--space-20);
    right: var(--container-padding);
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-gray-800);
    border: 1px solid var(--color-gray-700);
    border-radius: 50%;
    color: var(--color-gray-400);
    transition: background 0.3s ease,
                border-color 0.3s ease,
                color 0.3s ease,
                transform 0.3s var(--ease-out-expo);
  }

  .footer__back-top:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-4px);
  }

  .footer__back-top svg {
    width: 20px;
    height: 20px;
  }
</style>

<script>
  const backTopBtn = document.querySelector('.footer__back-top');

  backTopBtn?.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>
