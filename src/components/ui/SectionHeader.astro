---
interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  align?: 'center' | 'left';
  maxWidth?: string;
}

const {
  label,
  title,
  subtitle,
  align = 'center',
  maxWidth = '700px',
} = Astro.props;
---

<div class:list={['section-header', `section-header--${align}`]} style={`max-width: ${maxWidth}`}>
  {label && <span class="section-header__label">{label}</span>}
  <h2 class="section-header__title" set:html={title} />
  {subtitle && <p class="section-header__subtitle">{subtitle}</p>}
</div>

<style>
  .section-header {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .section-header--center {
    text-align: center;
    margin-inline: auto;
  }

  .section-header--left {
    text-align: left;
  }

  .section-header__label {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-primary);
  }

  .section-header__title {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--color-dark);
  }

  .section-header__subtitle {
    font-size: var(--text-lg);
    color: var(--color-gray-600);
    line-height: var(--leading-relaxed);
  }
</style>
