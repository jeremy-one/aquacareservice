---
import BaseLayout from '../layouts/BaseLayout.astro';
import img404 from '../assets/images/Erreur 404.png';

const title = 'Page introuvable | Aquacare Service';
const description = 'La page que vous recherchez n\'existe pas ou a été déplacée.';
---

<BaseLayout title={title} description={description}>
  <section class="error-page">
    <div class="error-page__container">
      <div class="error-page__image-wrapper">
        <img src={img404.src} alt="Erreur 404 — Page introuvable" class="error-page__image" />
      </div>
      <h1 class="error-page__title">Page introuvable</h1>
      <p class="error-page__text">La page que vous recherchez n'existe pas ou a été déplacée.</p>
      <a href="/" class="btn btn--primary">
        <span>Retour à l'accueil</span>
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .error-page__container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-6);
    padding-block: var(--space-16);
    padding-inline: var(--space-4);
  }

  .error-page__image-wrapper {
    position: relative;
    width: clamp(280px, 50vw, 500px);
    aspect-ratio: 1;
  }

  /* Dégradé radial pour fondre les bords de l'image dans le fond */
  .error-page__image-wrapper::after {
    content: '';
    position: absolute;
    inset: -30%;
    background: radial-gradient(circle, transparent 25%, rgb(16, 47, 92) 55%);
    z-index: 1;
    pointer-events: none;
  }

  .error-page__image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  .error-page__title {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    color: white;
  }

  .error-page__text {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.7);
    max-width: 400px;
  }
</style>

<!-- Styles globaux uniquement sur la page 404 -->
<style is:global>
  /* Fond bleu sur tout le body */
  body {
    background: linear-gradient(to bottom, rgb(18, 55, 115) 0%, rgb(14, 39, 69) 100%) !important;
    min-height: 100vh;
  }

  /* Cacher le footer */
  footer {
    display: none !important;
  }

  /* Cacher le grain overlay */
  .grain {
    display: none !important;
  }

  /* Logo en blanc */
  .header .header__logo-img {
    filter: brightness(0) invert(1);
  }

  /* Lignes du burger en blanc */
  .header .header__toggle-line {
    background: white !important;
  }

  /* CTA header en blanc */
  .header .header__cta {
    border-color: rgba(255, 255, 255, 0.3) !important;
    color: white !important;
  }

  /* Fond scrollé adapté au thème sombre */
  .header.is-scrolled {
    background: rgba(14, 39, 69, 0.85) !important;
    backdrop-filter: blur(20px);
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.2) !important;
  }
</style>
