---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import Marquee from '../components/sections/Marquee.astro';
import Services from '../components/sections/Services.astro';
import Zone from '../components/sections/Zone.astro';
import Process from '../components/sections/Process.astro';
import PhotoMarquee from '../components/sections/PhotoMarquee.astro';
import About from '../components/sections/About.astro';
import Testimonials from '../components/sections/Testimonials.astro';
import Gallery from '../components/sections/Gallery.astro';
import CTA from '../components/sections/CTA.astro';

const title = 'Entretien de piscine – Golfe de Saint-Tropez & Esterel | Aquacare Service';
const description = 'Contrats d\'entretien piscine pour particuliers et professionnels, résidences secondaires et villas. Rénovation local technique, régulation automatique, électrolyse au sel';
---

<BaseLayout title={title} description={description}>
  <Hero />
  <Marquee />
  <Services />
  <Zone />
  <Process />
  <PhotoMarquee />
  <About />
  <Testimonials />
  <Gallery />
  <CTA />
</BaseLayout>
